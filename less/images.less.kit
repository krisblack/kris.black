.fluid-image-animation-wrapper {
  overflow: visible !important;
}

.html-block.sqs-background-enabled,
.fluid-image-container,
.grid-wrapper .grid-image,
.sqs-block-image .image-inset {
  box-shadow:
    0 2.8px 2.2px rgba(0, 0, 0, 0.024),
    0 6.7px 5.3px rgba(0, 0, 0, 0.038),
    0 12.5px 10px rgba(0, 0, 0, 0.05),
    0 -12.3px 17.9px rgba(0, 0, 0, 0.042),
    0 -21.8px 33.4px rgba(0, 0, 0, 0.056)
  ;
}
// adding box shadows to images
.design-layout-inline .sqs-block-image-figure,
.image-slide-anchor,
.list-image,
.list-item-media {
  box-shadow:
    0 2.8px 2.2px rgba(0, 0, 0, 0.024),
    0 6.7px 5.3px rgba(0, 0, 0, 0.038),
    0 12.5px 10px rgba(0, 0, 0, 0.05),
    0 -12.3px 17.9px rgba(0, 0, 0, 0.042),
    0 -21.8px 33.4px rgba(0, 0, 0, 0.056)
  ;
}

// Adding Rounded Corners to Images
.list-item-media {
  .border-radius(); 
}

