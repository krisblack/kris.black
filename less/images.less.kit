.fluid-image-container {
  button.lightbox {
    //position: relative;
    
    & > span {
      bottom: 0;
      clip: auto;
      cursor: pointer;
      display: inline-block !important;
      height: 20px !important;
      overflow: visible;
      padding: 9px !important;
      right: 0;
      text-align: center;
      text-rendering: auto;
      vertical-align: middle;
      width: 20px !important;
      z-index: 4;
          
      &:before {
        //color: black;
        content: "\f065";
        font: var(--fa-font-solid);
        font-size: 16px;
        -webkit-font-smoothing: antialiased;
      }
      
      &:after {
        color: transparent;
        content: "View fullsize";
        display: inline-block;
        visibility: hidden;
      }
    }
    
    &:hover {
      & > span {
        align-items: center;
        background-color: fade(black, 80%);
        //border-radius: 0;
        color: white;
        display: flex !important;
        height: 100% !important;
        justify-content: center;
        padding: 0 !important;
        //transform: scale(1.5);
        transform-origin: bottom right;
        transition: all cubic-bezier(0,1,0,1) 0.15s;
        width: 100% !important;
        
        &:before {
          color: white;
          margin-right: 0.3rem;
          text-shadow: none;
        }
        
        &:after {
          color: @white;
          visibility: visible;
        }
      }
    }

  }
}